              | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
              .input-group
                input#InputEmail.form-control(type='password', name='password', placeholder='Enter password', required='')
                | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
                span.input-group-addon
                  i.glyphicon.glyphicon-ok.form-control-feedback
            | &#x9;&#x9;&#x9;&#x9;&#x9;
            | &#x9;&#x9;&#x9;&#x9;&#x9;
            input(type='radio', name='vehicle', value='admin')
            i.fa.fa-user-secret
              h4  מנהל  &nbsp;  
            input(type='radio', name='vehicle', value='agent', checked='')
            i.fa.fa-user    
              h4 בעל עסק
            br

            input#submit.btn.wow.tada.btn-embossed.btn-primary.pull-right(type='submit', name='submit', value='Login')

